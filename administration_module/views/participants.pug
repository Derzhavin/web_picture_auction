extends layout

block content
    div.participantDiv
        br
        fieldset.fieldset
            label.label Username
            input.input(name="username" type="name" value="")

        fieldset.fieldset
            label.label Amount of money
            input.input(name="money" type="number" value="")
        br
        button.editButton(onclick="edit(this)") Edit
        button.applyButton(onclick="apply(this)" disabled) Apply
        button.removeButton(onclick="remove(this)") Remove

    button.bodyButton(onclick="addNew(this)") Add new participant

    for participant in participants
        div.participantDiv
            br
            fieldset.fieldset
                label.label Username
                input.input(name="username" type="name" value=participant.username disabled)

            fieldset.fieldset
                label.label Amount of money
                input.input(name="money" type="number" value=participant.money disabled)
            br
            button.editButton(onclick="edit(this)") Edit
            button.applyButton(onclick="apply(this)" disabled) Apply
            button.removeButton(onclick="remove(this)") Remove
